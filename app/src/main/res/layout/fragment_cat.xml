<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Fragment.CatFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_game"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="65dp"
                android:contextClickable="true"
                android:drawableRight="@drawable/ic_baseline_games"
                android:drawablePadding="7dp"
                android:paddingTop="11dp"
                android:paddingRight="20dp"
                android:text="گیم"
                android:fontFamily="@font/arial"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sports"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:contextClickable="true"
                android:drawableRight="@drawable/ic_baseline_sports"
                android:drawablePadding="7dp"
                android:paddingTop="11dp"
                android:fontFamily="@font/arial"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:text="ورزشی"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_art"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:contextClickable="true"
                android:drawableRight="@drawable/ic_baseline_art"
                android:drawablePadding="7dp"
                android:paddingTop="11dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/arial"
                android:text="هنری"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:contextClickable="true"
                android:drawableRight="@drawable/ic_baseline_music"
                android:drawablePadding="7dp"
                android:paddingTop="11dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:text="موسیقی"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/arial"
                />

        </LinearLayout>
    </ScrollView>
</FrameLayout>