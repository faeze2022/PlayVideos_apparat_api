<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_item_game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="3.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_gravity="right"
            android:layout_weight="1.7"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_title_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:maxLines="2"
                android:text="title"
                android:fontFamily="@font/arial"
                android:textColor="@color/color_font_title"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_visitcnt_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-4dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="بازدید"
                    android:paddingRight="4dp"
                    android:fontFamily="@font/arial"
                    android:textColor="#757575"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_sdate_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/arial"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="ersal_date"
                    android:textColor="@color/color_font_text"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_smallposter_game"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/tv_duration_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:paddingLeft="2dp"
                android:text="مدت زمان"
                android:fontFamily="@font/arial"
                android:textColor="@color/color_font_text" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>