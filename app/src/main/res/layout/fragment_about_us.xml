<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee82ee"
    tools:context=".Fragment.AboutUsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
       android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="درباره ما"
            android:padding="8dp"
            android:textSize="30dp"
            android:textColor="@color/colorText"
            android:textStyle="bold|italic"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:drawableRight="@drawable/ic_grade"
            android:text="این اپلیکیشن بر اساس اپ آپارات ایجاد شده "
            android:drawablePadding="4dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:drawableRight="@drawable/ic_grade"
            android:text="دسته بندی ها شامل موزیک، گیم، ورزش و هنر است."
            android:drawablePadding="4dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:drawableRight="@drawable/ic_grade"
            android:text="با انتخاب دسته مورد نظر، ویدئوی  مربوطه نمایش داده میشود"
            android:drawablePadding="4dp"
            android:textSize="20dp"
            />
    </LinearLayout>
</FrameLayout>