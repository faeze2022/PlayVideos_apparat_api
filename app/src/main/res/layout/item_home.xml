<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:background="#ffffff"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="7">

        <ImageView
            android:id="@+id/img_home_smallposter"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_home_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:text="مدت زمان"
            android:fontFamily="@font/arial"
            android:textColor="@color/colorwhite" />

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:gravity="right"
            android:maxLines="2"
            android:paddingRight="4dp"
            android:fontFamily="@font/arial"
            android:text="title"
            android:textColor="@color/color_font_title"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_home_visitcnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="4dp"
                android:text="بازدید"
                android:fontFamily="@font/arial"
                android:textColor="#757575"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_home_sdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="right"
                android:maxLines="1"
                android:fontFamily="@font/arial"
                android:text="ersal_date"
                android:textColor="@color/color_font_text"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>